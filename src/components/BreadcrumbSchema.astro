---
// BreadcrumbSchema.astro
// Otomatik breadcrumb schema olu≈üturur

interface Props {
  items: Array<{
    name: string;
    url: string;
  }>;
}

const { items } = Astro.props;

const baseUrl = Astro.site
  ? new URL(Astro.site).origin
  : "https://hyundaiservisim.com";

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: items.map((item, index) => ({
    "@type": "ListItem",
    position: index + 1,
    name: item.name,
    item: new URL(item.url, baseUrl).href,
  })),
};
---

<!-- Breadcrumb Schema -->
<script
  type="application/ld+json"
  set:html={JSON.stringify(breadcrumbSchema)}
/>
