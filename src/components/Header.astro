---
import { Image } from "astro:assets";
import hyundaiElantra from "../assets/images/hyundai-elantra-servis.jpg";
import kiaStonic from "../assets/images/kia-stonic-servis.jpg";
import toyotaCHR from "../assets/images/toyota-c-hr-ozel-servis.jpg";
import nissanXTrail from "../assets/images/nissan-x-trail-ozel-servis.jpg";

import { navigationData } from "../utils/navigationData";

const menuItems = navigationData.menuItems;
---

<header
  id="main-header"
  class="fixed top-0 left-0 w-full z-[9999] transition-all duration-500 bg-[#0f172a]/40 backdrop-blur-2xl border-b border-white/5 overflow-x-clip"
>
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-24">
      <!-- Logo with Premium Glow -->
      <a href="/" class="relative z-50 flex items-center gap-3 group">
        <div
          class="absolute -inset-4 bg-orange-500/10 blur-2xl rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-700"
        >
        </div>
        <img
          src="/images/tetik-web-logo.webp"
          alt="Tetik Otomotiv Logo"
          class="h-10 w-auto relative z-10 group-hover:scale-105 transition-transform duration-500"
          width="150"
          height="40"
        />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-8">
        {
          menuItems.map((item) => (
            <div class="relative group">
              <a
                href={item.href}
                class="text-[12px] font-button text-white/80 hover:text-white transition-all duration-300 py-4 flex items-center gap-2 tracking-widest uppercase group-hover:translate-y-[-2px]"
              >
                {item.text}
                {item.hasDropdown && (
                  <svg
                    class="w-3.5 h-3.5 group-hover:rotate-180 transition-transform duration-500 text-orange-500"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="3"
                      d="M19 9l-7 7-7-7"
                    />
                  </svg>
                )}
              </a>

              {/* Dropdown Menu - Premium Glassmorphism */}
              {item.hasDropdown && (
                <div class="absolute top-full left-1/2 -translate-x-1/2 pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-500 transform group-hover:translate-y-0 translate-y-8 w-[800px] perspective-1000">
                  <div class="bg-[#0f172a]/60 backdrop-blur-3xl rounded-[2rem] p-4 shadow-[0_50px_100px_-20px_rgba(0,0,0,0.6)] border border-white/10 overflow-hidden grid grid-cols-2 gap-4">
                    {item.dropdownItems.map((subItem) => (
                      <div class="relative group/subitem">
                        <div class="flex items-center gap-4 p-4 rounded-xl">
                          <div class="w-[134px] h-[96px] rounded-lg overflow-hidden bg-slate-800 flex-shrink-0">
                            {/* Dynamically select image based on brand slug */}
                            {subItem.slug === "hyundai" && (
                              <Image
                                src={hyundaiElantra}
                                alt={subItem.text}
                                width={134}
                                height={96}
                                format="avif"
                              />
                            )}
                            {subItem.slug === "kia" && (
                              <Image
                                src={kiaStonic}
                                alt={subItem.text}
                                width={134}
                                height={96}
                                format="avif"
                              />
                            )}
                            {subItem.slug === "toyota" && (
                              <Image
                                src={toyotaCHR}
                                alt={subItem.text}
                                width={134}
                                height={96}
                                format="avif"
                              />
                            )}
                            {subItem.slug === "nissan" && (
                              <Image
                                src={nissanXTrail}
                                alt={subItem.text}
                                width={134}
                                height={96}
                                format="avif"
                              />
                            )}
                          </div>
                          <div class="flex-1 min-w-0">
                            <a
                              href={subItem.href}
                              class="font-button text-slate-200 hover:text-orange-500 transition-colors text-base block mb-3 uppercase tracking-widest"
                            >
                              {subItem.text}
                            </a>
                            {/* Lokasyon linkleri */}
                            {subItem.locations && (
                              <div class="space-y-2">
                                {subItem.locations.map((location) => (
                                  <a
                                    href={location.href}
                                    class="block text-sm text-slate-400 hover:text-white transition-colors truncate"
                                    title={location.text}
                                  >
                                    → {location.text}
                                  </a>
                                ))}
                              </div>
                            )}
                          </div>
                        </div>
                      </div>
                    ))}
                    <a
                      href="/7-24-yol-yardim"
                      class="col-span-2 mt-2 p-4 rounded-xl bg-gradient-to-r from-orange-600 to-red-600 flex items-center justify-between group/alert"
                    >
                      <div class="flex items-center gap-3">
                        <div class="bg-white/20 p-2 rounded-lg text-white">
                          <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            />
                          </svg>
                        </div>
                        <div>
                          <div class="font-button text-white text-sm tracking-widest">
                            7/24 YOL YARDIM
                          </div>
                          <div class="text-white/80 text-xs">
                            Gebze, Tuzla, Pendik, Kurtköy ve çevresi
                          </div>
                        </div>
                      </div>
                      <span class="text-white group-hover/alert:translate-x-1 transition-transform">
                        →
                      </span>
                    </a>
                  </div>
                </div>
              )}
            </div>
          ))
        }
      </nav>

      <!-- Action Button & Mobile Menu Toggle -->
      <div class="flex items-center gap-4">
        <a
          href="tel:05336157835"
          class="hidden md:flex items-center gap-3 bg-white text-slate-900 px-7 py-3 rounded-2xl font-button text-xs hover:bg-orange-500 hover:text-white transition-all duration-500 group shadow-lg hover:shadow-orange-500/20 tracking-widest"
        >
          <span class="tracking-widest font-button text-sm">0533 615 78 35</span
          >
          <div
            class="w-7 h-7 bg-slate-900 text-white rounded-xl flex items-center justify-center group-hover:bg-white group-hover:text-orange-500 transition-all duration-500 group-hover:rotate-[360deg]"
          >
            <svg
              class="w-3.5 h-3.5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="3"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path></svg
            >
          </div>
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          type="button"
          class="flex lg:hidden w-12 h-12 flex-col items-center justify-center gap-1.5 bg-orange-600 rounded-lg shadow-lg"
          aria-label="Menüyü Aç"
        >
          <span class="hamburger-line w-6 h-0.5 bg-white rounded-full block"
          ></span>
          <span class="hamburger-line w-6 h-0.5 bg-white rounded-full block"
          ></span>
          <span class="hamburger-line w-6 h-0.5 bg-white rounded-full block"
          ></span>
        </button>
      </div>
    </div>
  </div>
</header>

<!-- Mobile Menu - OUTSIDE HEADER -->
<div
  id="mobile-menu"
  class="lg:hidden fixed inset-0 w-full h-full z-[99999] overflow-hidden"
  style="background-color: #0f172a; display: none;"
>
  <!-- Animated Background Shapes -->
  <div class="absolute inset-0 z-0 opacity-20">
    <div
      class="absolute top-[-10%] right-[-10%] w-[80%] h-[80%] bg-orange-600/20 rounded-full blur-[120px] animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-[-10%] left-[-10%] w-[60%] h-[60%] bg-blue-600/10 rounded-full blur-[100px]"
      style="animation-delay: 2s;"
    >
    </div>
  </div>
  <!-- Close Button - Premium Style -->
  <button
    id="mobile-menu-close"
    class="absolute top-8 right-6 w-16 h-16 flex items-center justify-center bg-white/5 hover:bg-white/10 text-white rounded-[1.5rem] z-50 border border-white/10 backdrop-blur-3xl transition-all duration-300"
    aria-label="Menüyü Kapat"
  >
    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2.5"
        d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>

  <!-- Menu Content -->
  <div
    class="relative z-10 pt-32 px-10 pb-12 h-full overflow-y-auto flex flex-col"
  >
    <nav class="flex-1">
      <ul class="space-y-4">
        {
          menuItems.map((item) => (
            <li class="group">
              <a
                href={item.href}
                class="mobile-link block text-xl text-white hover:text-orange-500 transition-all duration-500 font-heading tracking-widest"
              >
                {item.text}
              </a>
              {item.hasDropdown && (
                <div class="mt-4 pl-6 space-y-4 border-l-2 border-white/10">
                  {item.dropdownItems.map((subItem) => (
                    <a
                      href={subItem.href}
                      class="mobile-link block text-sm font-heading text-slate-400 hover:text-white transition-colors py-1 tracking-widest uppercase"
                    >
                      {subItem.text}
                    </a>
                  ))}
                </div>
              )}
            </li>
          ))
        }
      </ul>

      <!-- Call Button -->
      <div class="mt-8">
        <a
          href="tel:05336157835"
          class="mobile-link flex items-center justify-center gap-3 bg-orange-600 hover:bg-orange-700 text-white py-4 rounded-xl font-button text-lg w-full transition-colors tracking-widest"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            ></path>
          </svg>
          0533 615 78 35
        </a>
      </div>

      <!-- 7/24 Yol Yardım -->
      <div class="mt-4">
        <a
          href="/7-24-yol-yardim"
          class="mobile-link flex items-center justify-center gap-3 bg-red-600 hover:bg-red-700 text-white py-4 rounded-xl font-heading text-lg w-full transition-colors"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          7/24 YOL YARDIM
        </a>
      </div>
    </nav>
  </div>
</div>

<script is:inline>
  // Mobile Menu - Event Delegation
  document.addEventListener("click", function (e) {
    var mobileMenu = document.getElementById("mobile-menu");

    // Open button clicked
    if (e.target.closest("#mobile-menu-btn")) {
      e.preventDefault();
      if (mobileMenu) {
        mobileMenu.style.display = "block";
        document.body.style.overflow = "hidden";
      }
      return;
    }

    // Close button clicked
    if (e.target.closest("#mobile-menu-close")) {
      e.preventDefault();
      if (mobileMenu) {
        mobileMenu.style.display = "none";
        document.body.style.overflow = "";
      }
      return;
    }

    // Link clicked inside menu
    if (e.target.closest(".mobile-link")) {
      if (mobileMenu) {
        mobileMenu.style.display = "none";
        document.body.style.overflow = "";
      }
      return;
    }
  });

  // Smart Header - Hide on Scroll Down, Show on Scroll Up
  let lastScroll = 0;
  const header = document.getElementById("main-header");

  window.addEventListener(
    "scroll",
    () => {
      const currentScroll = window.pageYOffset;
      if (!header) return;

      if (currentScroll <= 0) {
        header.style.transform = "translateY(0)";
        header.style.backgroundColor = "rgba(15, 23, 42, 0.4)"; // Navige blue tone with alpha
        return;
      }

      if (currentScroll > 100) {
        header.style.backgroundColor = "rgba(15, 23, 42, 0.9)"; // More opaque navy blue on scroll
      } else {
        header.style.backgroundColor = "rgba(15, 23, 42, 0.4)"; // Transparent navy blue at top
      }
      lastScroll = currentScroll;
    },
    { passive: true },
  );

  // Close on escape
  document.addEventListener("keydown", function (e) {
    if (e.key === "Escape") {
      var mobileMenu = document.getElementById("mobile-menu");
      if (mobileMenu && mobileMenu.style.display === "block") {
        mobileMenu.style.display = "none";
        document.body.style.overflow = "";
      }
    }
  });
</script>
