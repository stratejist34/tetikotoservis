---

<header
  id="main-header"
  class="fixed top-0 left-0 right-0 z-[9999] transition-all duration-300 bg-slate-950/80 backdrop-blur-md border-b border-slate-800/50"
>
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-24">
      <!-- Logo -->
      <a href="/" class="relative z-50 flex items-center gap-3 group">
        <img
          src="/images/tetik-web-logo.webp"
          alt="Tetik Otomotiv Logo"
          class="h-10 w-auto group-hover:scale-105 transition-transform"
          width="150"
          height="40"
        />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-8">
        {
          menuItems.map((item) => (
            <div class="relative group">
              <a
                href={item.href}
                class="text-sm font-bold text-white hover:text-orange-500 transition-colors py-4 flex items-center gap-1 tracking-wider"
              >
                {item.text}
                {item.hasDropdown && (
                  <svg
                    class="w-4 h-4 group-hover:rotate-180 transition-transform duration-300"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 9l-7 7-7-7"
                    />
                  </svg>
                )}
              </a>

              {/* Dropdown Menu */}
              {item.hasDropdown && (
                <div class="absolute top-full left-1/2 -translate-x-1/2 pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform group-hover:translate-y-0 translate-y-4 w-[750px]">
                  <div class="bg-slate-900 rounded-2xl p-3 shadow-2xl border border-slate-800 overflow-hidden grid grid-cols-2 gap-3">
                    {item.dropdownItems.map((subItem) => (
                      <div class="relative group/subitem">
                        <div class="flex items-center gap-4 p-4 rounded-xl">
                          <div class="w-[134px] h-[96px] rounded-lg overflow-hidden bg-slate-800 flex-shrink-0">
                            <Image
                              src={subItem.image}
                              alt={subItem.text}
                              width={134}
                              height={96}
                              format="avif"
                              quality={85}
                              class="w-full h-full object-cover group-hover/subitem:scale-110 transition-transform duration-500"
                              loading="lazy"
                            />
                          </div>
                          <div class="flex-1 min-w-0">
                            <a
                              href={subItem.href}
                              class="font-bold text-slate-200 hover:text-orange-500 transition-colors text-base block mb-3"
                            >
                              {subItem.text}
                            </a>
                            {/* Lokasyon linkleri */}
                            {subItem.locations && (
                              <div class="space-y-2">
                                {subItem.locations.map((location) => (
                                  <a
                                    href={location.href}
                                    class="block text-sm text-slate-400 hover:text-white transition-colors truncate"
                                    title={location.text}
                                  >
                                    → {location.text}
                                  </a>
                                ))}
                              </div>
                            )}
                          </div>
                        </div>
                      </div>
                    ))}
                    <a
                      href="/7-24-yol-yardim-gebze-tuzla-tetik-otomotiv"
                      class="col-span-2 mt-2 p-4 rounded-xl bg-gradient-to-r from-orange-600 to-red-600 flex items-center justify-between group/alert"
                    >
                      <div class="flex items-center gap-3">
                        <div class="bg-white/20 p-2 rounded-lg text-white">
                          <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            />
                          </svg>
                        </div>
                        <div>
                          <div class="font-black text-white text-sm">
                            7/24 YOL YARDIM
                          </div>
                          <div class="text-white/80 text-xs">
                            Gebze, Tuzla, Pendik, Kurtköy ve çevresi
                          </div>
                        </div>
                      </div>
                      <span class="text-white group-hover/alert:translate-x-1 transition-transform">
                        →
                      </span>
                    </a>
                  </div>
                </div>
              )}
            </div>
          ))
        }
      </nav>

      <!-- Action Button & Mobile Menu Toggle -->
      <div class="flex items-center gap-4">
        <a
          href="tel:05336157835"
          class="hidden md:flex items-center gap-2 bg-white text-slate-900 px-5 py-2.5 rounded-full font-bold text-sm hover:bg-orange-500 hover:text-white transition-all duration-300 group"
        >
          <span>0533 615 78 35</span>
          <div
            class="w-6 h-6 bg-slate-900 text-white rounded-full flex items-center justify-center group-hover:bg-white group-hover:text-orange-500 transition-colors"
          >
            <svg
              class="w-3 h-3"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path></svg
            >
          </div>
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          type="button"
          class="lg:hidden w-14 h-14 flex flex-col items-center justify-center gap-2 relative z-[9999] group bg-orange-600 rounded-xl shadow-lg"
          aria-label="Menüyü Aç"
        >
          <span
            class="w-7 h-1 bg-white rounded-full transition-all duration-300 origin-center group-[.is-active]:rotate-45 group-[.is-active]:translate-y-3"
          ></span>
          <span
            class="w-7 h-1 bg-white rounded-full transition-all duration-300 group-[.is-active]:opacity-0"
          ></span>
          <span
            class="w-7 h-1 bg-white rounded-full transition-all duration-300 origin-center group-[.is-active]:-rotate-45 group-[.is-active]:-translate-y-3"
          ></span>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu Overlay - Full Screen -->
  <div
    id="mobile-menu"
    class="lg:hidden fixed inset-0 z-[9998] pointer-events-none"
  >
    <!-- Dark Backdrop -->
    <div
      id="mobile-menu-backdrop"
      class="absolute inset-0 bg-slate-950 opacity-0 transition-opacity duration-300"
    >
    </div>

    <!-- Menu Content -->
    <div
      id="mobile-menu-content"
      class="absolute top-0 right-0 w-full h-full bg-slate-950 transform translate-x-full transition-transform duration-300 ease-out overflow-y-auto"
    >
      <!-- Header Space -->
      <div class="h-24"></div>

      <!-- Menu Items -->
      <nav class="px-6 py-8">
        <ul class="space-y-1">
          {
            menuItems.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="mobile-link block py-4 text-2xl font-bold text-white hover:text-orange-500 transition-colors border-b border-slate-800"
                >
                  {item.text}
                </a>
                {item.hasDropdown && (
                  <div class="py-2 pl-4 space-y-1 border-b border-slate-800">
                    {item.dropdownItems.map((subItem) => (
                      <a
                        href={subItem.href}
                        class="mobile-link block py-2 text-lg text-slate-300 hover:text-orange-500 transition-colors"
                      >
                        → {subItem.text}
                      </a>
                    ))}
                  </div>
                )}
              </li>
            ))
          }
        </ul>

        <!-- Call Button -->
        <div class="mt-8">
          <a
            href="tel:05336157835"
            class="flex items-center justify-center gap-3 bg-orange-600 hover:bg-orange-700 text-white py-4 rounded-xl font-bold text-lg w-full transition-colors"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            0533 615 78 35
          </a>
        </div>

        <!-- 7/24 Yol Yardım -->
        <div class="mt-4">
          <a
            href="/7-24-yol-yardim-gebze-tuzla-tetik-otomotiv"
            class="flex items-center justify-center gap-3 bg-red-600 hover:bg-red-700 text-white py-4 rounded-xl font-bold text-lg w-full transition-colors"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            7/24 YOL YARDIM
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

<script is:inline>
  // Mobile Menu - Simple and Reliable
  function initMobileMenu() {
    const menuBtn = document.getElementById("mobile-menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    const backdrop = document.getElementById("mobile-menu-backdrop");
    const content = document.getElementById("mobile-menu-content");

    if (!menuBtn || !mobileMenu || !backdrop || !content) return;
    if (menuBtn.dataset.initialized === "true") return;

    menuBtn.dataset.initialized = "true";
    let isOpen = false;

    function openMenu() {
      isOpen = true;
      menuBtn.classList.add("is-active");
      mobileMenu.classList.remove("pointer-events-none");
      mobileMenu.classList.add("pointer-events-auto");
      backdrop.classList.remove("opacity-0");
      backdrop.classList.add("opacity-100");
      content.classList.remove("translate-x-full");
      content.classList.add("translate-x-0");
      document.body.style.overflow = "hidden";
    }

    function closeMenu() {
      isOpen = false;
      menuBtn.classList.remove("is-active");
      mobileMenu.classList.add("pointer-events-none");
      mobileMenu.classList.remove("pointer-events-auto");
      backdrop.classList.add("opacity-0");
      backdrop.classList.remove("opacity-100");
      content.classList.add("translate-x-full");
      content.classList.remove("translate-x-0");
      document.body.style.overflow = "";
    }

    menuBtn.addEventListener("click", function (e) {
      e.preventDefault();
      e.stopPropagation();
      if (isOpen) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    // Close on backdrop click
    backdrop.addEventListener("click", closeMenu);

    // Close on link click
    const links = content.querySelectorAll("a");
    links.forEach(function (link) {
      link.addEventListener("click", closeMenu);
    });

    // Close on escape key
    document.addEventListener("keydown", function (e) {
      if (e.key === "Escape" && isOpen) {
        closeMenu();
      }
    });
  }

  // Header Scroll Effect
  function initHeaderScroll() {
    const header = document.getElementById("main-header");
    if (!header) return;

    window.addEventListener("scroll", function () {
      if (window.scrollY > 50) {
        header.classList.add("shadow-lg", "bg-slate-950/95");
        header.classList.remove("bg-slate-950/80");
      } else {
        header.classList.remove("shadow-lg", "bg-slate-950/95");
        header.classList.add("bg-slate-950/80");
      }
    });
  }

  // Initialize on DOM ready
  document.addEventListener("DOMContentLoaded", function () {
    initMobileMenu();
    initHeaderScroll();
  });

  // Re-initialize on Astro page navigation
  document.addEventListener("astro:page-load", function () {
    // Reset initialized flag for new page
    const menuBtn = document.getElementById("mobile-menu-btn");
    if (menuBtn) {
      menuBtn.dataset.initialized = "false";
    }
    initMobileMenu();
    initHeaderScroll();
  });
</script>
