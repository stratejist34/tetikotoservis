---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const allBlogPosts = await getCollection("blog");
const blogPosts = allBlogPosts
  .sort((a, b) => {
    const aDate = a.data.date?.getTime() || a.data.pubDate?.getTime() || 0;
    const bDate = b.data.date?.getTime() || b.data.pubDate?.getTime() || 0;
    return bDate - aDate;
  })
  .slice(0, 4);

const featuredPost = blogPosts[0];
const sidePosts = blogPosts.slice(1, 4);

// Tarih formatlayıcı
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("tr-TR", {
    day: "numeric",
    month: "long",
    year: "numeric",
  }).format(date);
};
---

<section
  class="py-32 bg-slate-900 overflow-hidden relative"
  id="blog-editorial"
>
  <!-- Background Pattern -->
  <div
    class="absolute inset-0 opacity-[0.02]"
    style="background-image: linear-gradient(#fff 1px, transparent 1px); background-size: 40px 40px;"
  >
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Header -->
    <div
      class="flex flex-col md:flex-row justify-between items-end mb-16 border-b border-white/5 pb-12"
      data-reveal="fade-up"
    >
      <div>
        <span
          class="text-orange-500 font-button tracking-[0.4em] uppercase text-[10px] mb-4 block"
          >Blog & Haberler</span
        >
        <h2
          class="text-4xl md:text-6xl text-white tracking-widest font-heading leading-tight"
        >
          OTOMOTİV <br />
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-white via-white/80 to-slate-500"
            >GÜNDEMİ</span
          >
        </h2>
      </div>
      <a
        href="/blog"
        class="hidden md:inline-flex items-center gap-2 text-white hover:text-orange-500 transition-colors font-button text-xs tracking-widest group"
      >
        Tüm Yazıları Gör
        <svg
          class="w-5 h-5 group-hover:translate-x-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
        >
      </a>
    </div>

    <div class="grid lg:grid-cols-12 gap-12">
      <!-- FEATURED POST (Left - 7 Columns) -->
      <div class="lg:col-span-7" data-reveal="fade-right">
        <a
          href={`/blog/${featuredPost.slug}`}
          class="blog-tilt-card group block h-full relative overflow-hidden rounded-2xl"
        >
          <div class="aspect-[4/3] w-full h-full relative overflow-hidden">
            <img
              src={featuredPost.data.coverImage || featuredPost.data.image}
              alt={featuredPost.data.title}
              class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-105"
              width="1200"
              height="900"
              loading="eager"
              fetchpriority="high"
              decoding="async"
            />
            <div
              class="absolute inset-0 bg-gradient-to-t from-slate-950 via-slate-950/50 to-transparent opacity-90 group-hover:opacity-80 transition-opacity duration-500"
            >
            </div>

            <div class="absolute bottom-0 left-0 p-8 md:p-12 w-full">
              <div class="flex items-center gap-4 mb-6">
                <span
                  class="px-5 py-2 bg-orange-600 text-white text-[10px] font-button rounded-xl uppercase tracking-widest"
                >
                  {featuredPost.data.category || "Genel"}
                </span>
                <span
                  class="text-slate-400 text-[10px] font-button tracking-[0.2em] uppercase"
                >
                  {
                    formatDate(
                      featuredPost.data.date ||
                        featuredPost.data.pubDate ||
                        new Date(),
                    )
                  }
                </span>
              </div>
              <h3
                class="text-2xl md:text-4xl text-white mb-6 leading-tight font-heading group-hover:text-orange-500 transition-all duration-500 tracking-widest"
              >
                {featuredPost.data.title}
              </h3>
              <p
                class="text-slate-400 text-xl line-clamp-2 max-w-2xl font-sans font-medium leading-relaxed hidden md:block opacity-80"
              >
                {featuredPost.data.description}
              </p>

              <div
                class="mt-10 flex items-center gap-4 text-white font-button uppercase tracking-widest text-xs group-hover:gap-6 transition-all duration-500"
              >
                OKUMAYA DEVAM ET
                <svg
                  class="w-5 h-5 group-hover:rotate-[-45deg] transition-transform duration-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="3"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                >
              </div>
            </div>
          </div>
        </a>
      </div>

      <!-- SIDE LIST (Right - 5 Columns) -->
      <div
        class="lg:col-span-5 flex flex-col gap-8"
        data-reveal="fade-left"
        data-delay="200"
      >
        {
          sidePosts.map((post, index) => (
            <a
              href={`/blog/${post.slug}`}
              class="blog-tilt-card group flex gap-6 items-start border-b border-white/10 pb-8 last:border-0 last:pb-0"
              style={`--tilt-index: ${index}`}
            >
              <div class="w-32 h-32 md:w-40 md:h-28 flex-shrink-0 rounded-xl overflow-hidden relative">
                <img
                  src={post.data.coverImage || post.data.image}
                  alt={post.data.title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                  width="400"
                  height="280"
                  loading="lazy"
                  decoding="async"
                />
                <div class="absolute inset-0 bg-slate-950/20 group-hover:bg-transparent transition-colors" />
              </div>

              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <span class="text-orange-500 text-[10px] font-button uppercase tracking-widest">
                    {post.data.category || "Genel"}
                  </span>
                  <span class="w-1 h-1 rounded-full bg-slate-700" />
                  <span class="text-slate-500 text-[10px] font-button tracking-widest uppercase">
                    {formatDate(
                      post.data.date || post.data.pubDate || new Date(),
                    )}
                  </span>
                </div>
                <h4 class="text-xl font-heading text-white mb-3 leading-tight group-hover:text-orange-500 transition-colors line-clamp-2 tracking-widest uppercase">
                  {post.data.title}
                </h4>
                <p class="text-slate-400 text-sm line-clamp-2 font-sans font-medium leading-relaxed opacity-70">
                  {post.data.description}
                </p>
              </div>
            </a>
          ))
        }

        <div class="mt-auto pt-8 md:hidden">
          <a
            href="/blog"
            class="flex items-center justify-center gap-2 w-full py-4 bg-white/10 rounded-xl text-white font-button text-xs tracking-widest hover:bg-orange-600 transition-colors"
          >
            Tüm Yazıları Gör
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
            >
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // 3D Tilt Effect for Blog Cards
  function initBlogTilt() {
    const cards = document.querySelectorAll(".blog-tilt-card");

    // Only on desktop
    if (window.innerWidth < 1024) return;

    cards.forEach((card) => {
      const el = card as HTMLElement;
      let bounds: DOMRect;
      let isHovering = false;

      const onMouseMove = (e: MouseEvent) => {
        if (!isHovering || !bounds) return;

        const x = e.clientX - bounds.left;
        const y = e.clientY - bounds.top;

        const centerX = bounds.width / 2;
        const centerY = bounds.height / 2;

        const rotateX = ((y - centerY) / centerY) * -6;
        const rotateY = ((x - centerX) / centerX) * 6;

        el.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
      };

      const onMouseEnter = () => {
        isHovering = true;
        bounds = el.getBoundingClientRect();
        el.style.transition = "transform 0.1s ease-out";
      };

      const onMouseLeave = () => {
        isHovering = false;
        el.style.transition = "transform 0.4s ease-out";
        el.style.transform = "perspective(1000px) rotateX(0) rotateY(0)";
      };

      el.addEventListener("mouseenter", onMouseEnter);
      el.addEventListener("mouseleave", onMouseLeave);
      el.addEventListener("mousemove", onMouseMove);
    });
  }

  // Init
  if (document.readyState === "complete") {
    initBlogTilt();
  } else {
    window.addEventListener("load", initBlogTilt, { once: true });
  }
  document.addEventListener("astro:page-load", initBlogTilt);
</script>

<style>
  .blog-tilt-card {
    will-change: transform;
    transform-style: preserve-3d;
  }
</style>
