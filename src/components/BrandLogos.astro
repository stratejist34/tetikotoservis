---
// Ultra Modern Brand Logos Section
---

<section class="relative py-20 overflow-hidden">
  <!-- Premium Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-white to-blue-50">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(59,130,246,0.08),transparent_70%)]"></div>
  </div>

  <!-- Animated Pattern -->
  <div class="absolute inset-0 opacity-[0.02]">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle, rgba(30,58,138,0.3) 1px, transparent 1px); background-size: 40px 40px;"></div>
  </div>

  <div class="relative z-10 container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center gap-3 mb-4">
        <div class="h-px w-12 bg-gradient-to-r from-transparent to-blue-500"></div>
        <span class="text-sm font-bold text-blue-600 uppercase tracking-wider">Güvenilir Markalar</span>
        <div class="h-px w-12 bg-gradient-to-r from-blue-500 to-transparent"></div>
      </div>
      <h3 class="text-2xl md:text-3xl font-black text-gray-900 uppercase" style="font-family: 'Space Grotesk', sans-serif;">
        Çalıştığımız Markalar
      </h3>
    </div>

    <!-- Brand Logos Grid -->
    <div class="flex flex-wrap items-center justify-center gap-8 md:gap-12 lg:gap-16 max-w-5xl mx-auto">
      <!-- Nissan -->
      <div data-reveal="left" class="group relative">
        <div class="absolute -inset-4 bg-gradient-to-r from-red-500/20 to-red-600/10 rounded-3xl opacity-0 group-hover:opacity-100 blur-xl transition-all duration-500"></div>
        <div class="relative bg-white/80 backdrop-blur-sm p-6 rounded-2xl border-2 border-white/60 hover:border-red-500/30 hover:bg-white hover:scale-110 hover:-translate-y-2 transition-all duration-500 shadow-lg hover:shadow-2xl">
          <img src="/images/logolar/nissan.webp" alt="Nissan Logo" class="w-20 md:w-24 h-auto object-contain grayscale group-hover:grayscale-0 transition-all duration-500" />
        </div>
      </div>

      <!-- Hyundai -->
      <div data-reveal="bottom" class="group relative">
        <div class="absolute -inset-4 bg-gradient-to-r from-blue-500/20 to-blue-600/10 rounded-3xl opacity-0 group-hover:opacity-100 blur-xl transition-all duration-500"></div>
        <div class="relative bg-white/80 backdrop-blur-sm p-6 rounded-2xl border-2 border-white/60 hover:border-blue-500/30 hover:bg-white hover:scale-110 hover:-translate-y-2 transition-all duration-500 shadow-lg hover:shadow-2xl">
          <img src="/images/logolar/hyundai.webp" alt="Hyundai Logo" class="w-20 md:w-24 h-auto object-contain grayscale group-hover:grayscale-0 transition-all duration-500" />
        </div>
      </div>

      <!-- Kia -->
      <div data-reveal="right" class="group relative">
        <div class="absolute -inset-4 bg-gradient-to-r from-orange-500/20 to-orange-600/10 rounded-3xl opacity-0 group-hover:opacity-100 blur-xl transition-all duration-500"></div>
        <div class="relative bg-white/80 backdrop-blur-sm p-6 rounded-2xl border-2 border-white/60 hover:border-orange-500/30 hover:bg-white hover:scale-110 hover:-translate-y-2 transition-all duration-500 shadow-lg hover:shadow-2xl">
          <img src="/images/logolar/kia.webp" alt="Kia Logo" class="w-20 md:w-24 h-auto object-contain grayscale group-hover:grayscale-0 transition-all duration-500" />
        </div>
      </div>

      <!-- Toyota -->
      <div data-reveal="left" class="group relative">
        <div class="absolute -inset-4 bg-gradient-to-r from-blue-500/20 to-blue-600/10 rounded-3xl opacity-0 group-hover:opacity-100 blur-xl transition-all duration-500"></div>
        <div class="relative bg-white/80 backdrop-blur-sm p-6 rounded-2xl border-2 border-white/60 hover:border-blue-500/30 hover:bg-white hover:scale-110 hover:-translate-y-2 transition-all duration-500 shadow-lg hover:shadow-2xl">
          <img src="/images/logolar/toyota.webp" alt="Toyota Logo" class="w-20 md:w-24 h-auto object-contain grayscale group-hover:grayscale-0 transition-all duration-500" />
        </div>
      </div>
    </div>
  </div>
</section>