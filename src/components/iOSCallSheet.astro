<style>
    .ios-sheet.is-open {
        display: block;
    }

    .ios-sheet.is-open .sheet-backdrop {
        animation: fadeIn 0.2s ease-out forwards;
    }

    .ios-sheet.is-open .sheet-content {
        transform: translateY(0);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    /* Safe area for iPhone X+ */
    @supports (padding-bottom: env(safe-area-inset-bottom)) {
        .sheet-content {
            padding-bottom: calc(2.5rem + env(safe-area-inset-bottom));
        }
    }
</style>

<script>
    const sheet = document.getElementById("ios-call-sheet");
    const sheetContent = sheet?.querySelector(".sheet-content");
    const backdrop = sheet?.querySelector(".sheet-backdrop");
    const cancelBtn = document.getElementById("sheet-cancel");

    function openSheet() {
        if (!sheet) return;
        sheet.classList.add("is-open");
        document.body.style.overflow = "hidden";

        // Track open
        if (typeof (window as any).gtag !== "undefined") {
            (window as any).gtag("event", "ios_sheet_opened", {
                trigger: "phone_button",
            });
        }
    }

    function closeSheet() {
        if (!sheet) return;
        const content = sheetContent as HTMLElement;
        if (content) {
            content.style.setProperty("transform", "translateY(100%)");
        }
        setTimeout(() => {
            sheet.classList.remove("is-open");
            document.body.style.overflow = "";
            if (content) {
                content.style.removeProperty("transform");
            }
        }, 300);
    }

    // Close handlers
    backdrop?.addEventListener("click", closeSheet);
    cancelBtn?.addEventListener("click", closeSheet);

    // Track action clicks
    document.querySelectorAll(".sheet-action").forEach((action) => {
        action.addEventListener("click", () => {
            const actionType = action.getAttribute("data-action");
            if (typeof (window as any).gtag !== "undefined") {
                (window as any).gtag("event", "ios_sheet_action", {
                    action_type: actionType,
                });
            }
            closeSheet();
        });
    });

    // Escape key
    document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && sheet?.classList.contains("is-open")) {
            closeSheet();
        }
    });

    // Export for external use
    (window as any).openIOSSheet = openSheet;
    (window as any).closeIOSSheet = closeSheet;
</script>
