<style>
    .quick-action-bar {
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 15px 40px -10px rgba(0, 0, 0, 0.7);
    }

    /* Smart Sticky Behavior - Mobilde scroll sonrasÄ± sticky */
    @media (max-width: 768px) {
        .quick-action-bar {
            position: relative;
            transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        }

        .quick-action-bar.is-sticky {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(20px);
            z-index: 1000;
            padding: 0.25rem 0;
            animation: slideDown 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        }

        .quick-action-bar.is-sticky .container {
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }
    }

    @keyframes slideDown {
        from {
            transform: translateY(-100%);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* Horizontal scroll on very small screens */
    @media (max-width: 380px) {
        .quick-action-bar .container > div {
            overflow-x: auto;
            justify-content: flex-start;
            -webkit-overflow-scrolling: touch;
            scrollbar-width: none;
        }

        .quick-action-bar .container > div::-webkit-scrollbar {
            display: none;
        }

        .quick-action-item {
            flex-shrink: 0;
        }
    }
</style>

<script>
    // Smart Sticky Logic - Mobilde sadece scroll sonrasÄ± sticky yap
    const quickActionBar = document.getElementById("quick-action-bar");
    if (quickActionBar && window.innerWidth < 768) {
        const originalTop = quickActionBar.offsetTop;
        let isSticky = false;

        window.addEventListener(
            "scroll",
            () => {
                const scrollY = window.scrollY;

                // Hero'yu geÃ§tikten sonra sticky yap
                if (scrollY > originalTop && !isSticky) {
                    isSticky = true;
                    quickActionBar.classList.add("is-sticky");
                } else if (scrollY <= originalTop && isSticky) {
                    isSticky = false;
                    quickActionBar.classList.remove("is-sticky");
                }
            },
            { passive: true },
        );
    }

    // Click Tracking
    document.querySelectorAll(".quick-action-item").forEach((item) => {
        item.addEventListener("click", () => {
            const actionName = item.getAttribute("data-action");
            if (typeof (window as any).gtag !== "undefined") {
                (window as any).gtag("event", "quick_action_click", {
                    action_name: actionName,
                    click_location: "quick_action_bar",
                });
            }
        });
    });

    // Smooth scroll for anchor links
    document
        .querySelectorAll('.quick-action-item[href^="#"]')
        .forEach((anchor) => {
            anchor.addEventListener(
                "click",
                function (this: HTMLAnchorElement, e: Event) {
                    e.preventDefault();
                    const targetId = this.getAttribute("href");
                    if (targetId) {
                        const target = document.querySelector(targetId);
                        if (target) {
                            target.scrollIntoView({
                                behavior: "smooth",
                                block: "start",
                            });
                        }
                    }
                },
            );
        });
</script>
