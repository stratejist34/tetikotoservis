<script>
  function initBentoEffects() {
    const cards = document.querySelectorAll("[data-tilt-card]");

    // Staggered entrance animation with IntersectionObserver
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const card = entry.target as HTMLElement;
            const delay =
              card.style.getPropertyValue("--stagger-delay") || "0ms";

            setTimeout(() => {
              card.classList.add("animate-in");
            }, parseInt(delay));

            observer.unobserve(card);
          }
        });
      },
      { threshold: 0.1, rootMargin: "50px" },
    );

    cards.forEach((card) => observer.observe(card));

    // 3D Tilt Effect (Desktop only)
    if (window.innerWidth >= 1024) {
      cards.forEach((card) => {
        const el = card as HTMLElement;
        const glareEl = el.querySelector(".tilt-glare") as HTMLElement;
        const glareInner = el.querySelector(".tilt-glare-inner") as HTMLElement;

        let bounds: DOMRect;
        let isHovering = false;

        const onMouseMove = (e: MouseEvent) => {
          if (!isHovering || !bounds) return;

          const x = e.clientX - bounds.left;
          const y = e.clientY - bounds.top;

          const centerX = bounds.width / 2;
          const centerY = bounds.height / 2;

          const rotateX = ((y - centerY) / centerY) * -8;
          const rotateY = ((x - centerX) / centerX) * 8;

          el.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(1.02)`;

          // Glare
          if (glareEl && glareInner) {
            const glareX = (x / bounds.width) * 100;
            const glareY = (y / bounds.height) * 100;
            glareInner.style.transform = `translate(${glareX - 100}%, ${glareY - 100}%)`;
            glareEl.style.opacity = "1";
          }
        };

        const onMouseEnter = () => {
          isHovering = true;
          bounds = el.getBoundingClientRect();
          el.style.transition = "transform 0.1s ease-out";
        };

        const onMouseLeave = () => {
          isHovering = false;
          el.style.transition = "transform 0.5s ease-out";
          el.style.transform =
            "perspective(1000px) rotateX(0) rotateY(0) scale(1)";
          if (glareEl) glareEl.style.opacity = "0";
        };

        el.addEventListener("mouseenter", onMouseEnter);
        el.addEventListener("mouseleave", onMouseLeave);
        el.addEventListener("mousemove", onMouseMove);
      });
    }
  }

  if (document.readyState === "complete") {
    initBentoEffects();
  } else {
    window.addEventListener("load", initBentoEffects, { once: true });
  }
  document.addEventListener("astro:page-load", initBentoEffects);
</script>

<style>
  .bento-card {
    opacity: 0;
    transform: translateY(30px);
    will-change: transform, opacity;
  }

  .bento-card.animate-in {
    animation: staggerFadeIn 0.6s ease-out forwards;
  }

  @keyframes staggerFadeIn {
    to {
      opacity: 1;
      transform: translateY(0) perspective(1000px) rotateX(0) rotateY(0);
    }
  }

  .tilt-glare {
    transition: opacity 0.3s ease;
  }

  .tilt-glare-inner {
    will-change: transform;
  }

  /* Mobilde tilt efekti kapalı */
  @media (max-width: 1023px) {
    .bento-card {
      transform: translateY(30px) !important;
    }
    .bento-card.animate-in {
      transform: translateY(0) !important;
    }
  }
</style>
