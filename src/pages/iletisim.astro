  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const openEl = document.getElementById("service-status-open");
      const closedEl = document.getElementById("service-status-closed");

      const widget = document.getElementById("time-widget");
      const widgetGreeting = document.getElementById("time-widget-greeting");
      const widgetTicker = document.getElementById("time-widget-ticker");
      const widgetSky = document.getElementById("time-widget-sky");
      const widgetOrb = document.getElementById("time-widget-orb");
      const widgetOrbMask = document.getElementById("time-widget-orb-mask");
      const widgetOrbGlow = document.getElementById("time-widget-orb-glow");

      function updateStatus() {
        if (!openEl || !closedEl) return;

        const now = new Date();
        const minutes = now.getHours() * 60 + now.getMinutes();
        const day = now.getDay(); // 0 = Pazar, 1 = Pazartesi, ... 6 = Cumartesi
        const isWorkingDay = day >= 1 && day <= 6; // Pzt-Cmt açık
        const openStart = 8 * 60; // 08:00
        const openEnd = 19 * 60; // 19:00
        const isOpen =
          isWorkingDay && minutes >= openStart && minutes < openEnd;

        if (isOpen) {
          openEl.classList.remove("hidden");
          closedEl.classList.add("hidden");
        } else {
          openEl.classList.add("hidden");
          closedEl.classList.remove("hidden");
        }
      }

      let typewriterTimeout: ReturnType<typeof setTimeout> | null = null;

      function typewriterEffect(
        element: HTMLElement | null,
        text: string,
        speed = 80,
      ) {
        if (!element) {
          console.log("Typewriter: Element bulunamadı");
          return;
        }

        console.log("Typewriter başlatılıyor:", text.substring(0, 50) + "...");

        if (typewriterTimeout) {
          clearTimeout(typewriterTimeout);
        }

        // Metni cümlelere ayır (. ? ! ile biten)
        const sentences = text.match(/[^.!?]+[.!?]+/g) || [text];
        let currentSentence = 0;
        let currentChar = 0;
        let currentLineDiv: HTMLDivElement | null = null;
        element.innerHTML = "";

        function type() {
          if (!element) return;

          if (currentSentence < sentences.length) {
            const sentence = sentences[currentSentence].trim();

            if (currentChar === 0) {
              // Yeni cümle için yeni div oluştur
              currentLineDiv = document.createElement("div");
              currentLineDiv.className = "mb-1";
              element.appendChild(currentLineDiv);
            }

            if (currentChar < sentence.length) {
              const char = sentence.charAt(currentChar);

              // Karakteri ekle ve cursor'u inline göster
              if (currentLineDiv) {
                currentLineDiv.innerHTML =
                  sentence.substring(0, currentChar + 1) +
                  '<span class="typewriter-cursor">|</span>';
              }

              currentChar++;

              // Virgül, soru işaretleri gibi noktalama işaretlerinde hafif duraklama
              let delay = speed;
              if (char === "," || char === ";") {
                delay = 300; // 300ms duraklama
              } else if (char === "?" || char === "!") {
                delay = 400; // 400ms duraklama
              }

              typewriterTimeout = setTimeout(type, delay);
            } else {
              // Cümle bitti, cursor'u kaldır
              if (currentLineDiv) {
                currentLineDiv.innerHTML = sentence;
              }

              // Sonraki cümleye geç
              currentSentence++;
              currentChar = 0;

              if (currentSentence < sentences.length) {
                // Cümle sonu 800ms duraklama
                typewriterTimeout = setTimeout(type, 800);
              } else {
                // Tüm cümleler bitti, baştan başla
                console.log(
                  "Typewriter tamamlandı, 5 saniye sonra tekrar başlayacak",
                );
                setTimeout(() => {
                  if (!element) return;
                  console.log("Typewriter yeniden başlatılıyor");
                  element.innerHTML = "";
                  currentSentence = 0;
                  currentChar = 0;
                  currentLineDiv = null;
                  typewriterTimeout = setTimeout(type, 2000);
                }, 5000);
              }
            }
          }
        }

        type();
      }

      function updateTimeWidget() {
        if (
          !widget ||
          !widgetGreeting ||
          !widgetTicker ||
          !widgetSky ||
          !widgetOrb ||
          !widgetOrbMask ||
          !widgetOrbGlow
        ) {
          return;
        }

        const now = new Date();
        const minutes = now.getHours() * 60 + now.getMinutes();

        // Selamlama metni
        let greeting = "";
        if (minutes >= 8 * 60 && minutes < 10 * 60) {
          greeting = "Günaydın";
        } else if (minutes >= 10 * 60 && minutes < 17 * 60) {
          greeting = "İyi Günler";
        } else if (minutes >= 17 * 60 && minutes < 22 * 60) {
          greeting = "İyi Akşamlar";
        } else if (minutes >= 22 * 60 || minutes < 3 * 60) {
          greeting = "İyi Geceler";
        } else {
          // 03:00 - 08:00
          greeting = "İyi Sabahlar";
        }

        // Servis durumuna göre detay mesaj
        const isDay = minutes >= 8 * 60 && minutes < 19 * 60;
        let detail = "";
        if (isDay) {
          detail =
            "Acil bir durum mu? veya bakım ihtiyacınız mı var? İsah ustayı hemen arayabilir veya yazarak bilgi isteyebilirsiniz.";
        } else {
          detail =
            "Servisimiz 08:00'de açılıyor, dilerseniz WhatsApp üzerinden İsah Usta'ya not bırakabilirsiniz.";
        }

        widgetGreeting.textContent = greeting;
        typewriterEffect(widgetTicker, detail);

        // Gün / gece temasını güncelle
        if (isDay) {
          widget.classList.add("time-widget-day");
          widget.classList.remove("time-widget-night");
        } else {
          widget.classList.add("time-widget-night");
          widget.classList.remove("time-widget-day");
        }
      }

      // İlk yükleme - hemen çalıştır
      updateStatus();

      // Widget için küçük bir gecikme ile başlat (DOM tam hazır olsun)
      setTimeout(() => {
        updateTimeWidget();
      }, 100);

      // Periyodik güncelleme
      setInterval(() => {
        updateStatus();
        updateTimeWidget();
      }, 60 * 1000);
    });
  </script>

