---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';

const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = allPosts.sort((a, b) => {
  const aDate = a.data.date?.valueOf() || a.data.pubDate?.valueOf() || 0;
  const bDate = b.data.date?.valueOf() || b.data.pubDate?.valueOf() || 0;
  return bDate - aDate;
});

// Featured Post (İlk yazı)
const featuredPost = sortedPosts[0];
const otherPosts = sortedPosts.slice(1);

// SEO Meta
const pageTitle = "Blog - Otomotiv Dünyasından Haberler | Tetik Otomotiv";
const pageDescription = "Araç bakımı, periyodik bakım ipuçları, teknik bilgiler ve servis dünyasından en güncel haberler. Hyundai, Kia, Toyota ve Nissan araçlarınız için rehber.";
---

<Layout title={pageTitle} description={pageDescription}>
  
  <main class="bg-slate-50">
    <!-- Hero Section -->
    <section class="relative bg-slate-900 py-20 md:py-32 overflow-hidden">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-[url('/images/pattern.svg')] opacity-5"></div>
        <div class="absolute inset-0 bg-gradient-to-b from-transparent to-slate-900"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10 text-center">
        <span class="inline-block py-1 px-3 rounded-full bg-orange-600/20 border border-orange-500/30 text-orange-400 text-sm font-bold tracking-widest uppercase mb-6">
          Tetik Otomotiv Blog
        </span>
        <h1 class="text-4xl md:text-6xl font-black text-white mb-6 tracking-tight">
          OTOMOTİV DÜNYASI
        </h1>
        <p class="text-lg md:text-xl text-slate-400 max-w-2xl mx-auto leading-relaxed">
          Araç bakımı, teknik ipuçları ve servis dünyasından en güncel haberler.
        </p>
      </div>
    </section>

    <!-- Blog Content -->
    <section class="py-16 md:py-24 -mt-12 md:-mt-20 relative z-20">
      <div class="container mx-auto px-4">
        
        <!-- Featured Post (Varsa) -->
        {featuredPost && (
          <div class="mb-16">
            <a href={`/blog/${featuredPost.slug}`} class="group block relative rounded-[2rem] overflow-hidden shadow-2xl bg-white grid md:grid-cols-2">
              <div class="relative h-64 md:h-auto overflow-hidden">
                <img 
                  src={featuredPost.data.coverImage || featuredPost.data.image || '/placeholder.jpg'} 
                  alt={featuredPost.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                />
                <div class="absolute inset-0 bg-slate-900/10 group-hover:bg-transparent transition-colors"></div>
              </div>
              <div class="p-8 md:p-12 flex flex-col justify-center">
                <div class="flex items-center gap-4 text-sm text-slate-500 mb-4">
                  {(featuredPost.data.categories && featuredPost.data.categories[0]) && (
                    <span class="text-orange-600 font-bold uppercase tracking-wider">{featuredPost.data.categories[0]}</span>
                  )}
                  <span>•</span>
                  <time>{(featuredPost.data.pubDate || featuredPost.data.date)?.toLocaleDateString('tr-TR')}</time>
                </div>
                <h2 class="text-2xl md:text-4xl font-black text-slate-900 mb-4 group-hover:text-orange-600 transition-colors leading-tight">
                  {featuredPost.data.title}
                </h2>
                <p class="text-slate-600 text-lg mb-6 line-clamp-3">
                  {featuredPost.data.description}
                </p>
                <div class="flex items-center font-bold text-orange-600 group-hover:translate-x-2 transition-transform">
                  Devamını Oku 
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                </div>
              </div>
            </a>
          </div>
        )}

        <!-- Other Posts Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {otherPosts.map(post => (
            <article class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden flex flex-col h-full">
              <a href={`/blog/${post.slug}`} class="block overflow-hidden relative h-64">
                <img 
                  src={post.data.coverImage || post.data.image || '/placeholder.jpg'} 
                  alt={post.data.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-slate-900/0 group-hover:bg-slate-900/10 transition-colors"></div>
              </a>
              
              <div class="p-8 flex flex-col flex-grow">
                <div class="flex items-center gap-3 text-xs font-bold text-slate-400 uppercase tracking-wider mb-4">
                  {(post.data.categories && post.data.categories[0]) && (
                    <span class="text-orange-500">{post.data.categories[0]}</span>
                  )}
                  <span>•</span>
                  <time>{(post.data.pubDate || post.data.date)?.toLocaleDateString('tr-TR')}</time>
                </div>
                
                <h3 class="text-xl font-bold text-slate-900 mb-3 group-hover:text-orange-600 transition-colors line-clamp-2">
                  <a href={`/blog/${post.slug}`}>
                    {post.data.title}
                  </a>
                </h3>
                
                <p class="text-slate-600 text-sm line-clamp-3 mb-6 flex-grow leading-relaxed">
                  {post.data.description}
                </p>
                
                <a href={`/blog/${post.slug}`} class="inline-flex items-center font-bold text-sm text-slate-900 group-hover:text-orange-600 transition-colors">
                  Okumaya Devam Et
                  <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                </a>
              </div>
            </article>
          ))}
        </div>

        {/* Empty State */}
        {sortedPosts.length === 0 && (
          <div class="text-center py-20 bg-white rounded-3xl shadow-sm border border-slate-100">
            <div class="text-6xl mb-6">✍️</div>
            <h2 class="text-2xl font-bold text-slate-900 mb-2">Henüz Yazı Eklenmemiş</h2>
            <p class="text-slate-500">Çok yakında burada harika içerikler olacak.</p>
          </div>
        )}
      </div>
    </section>

    <!-- Newsletter / CTA -->
    <section class="py-24 bg-white border-t border-slate-100">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto bg-slate-900 rounded-[2.5rem] p-12 md:p-16 text-center relative overflow-hidden">
          <div class="absolute inset-0 bg-[url('/images/pattern.svg')] opacity-5"></div>
          <div class="relative z-10">
            <h2 class="text-3xl md:text-4xl font-black text-white mb-6">
              Aracınızın Bakımını Aksatmayın
            </h2>
            <p class="text-slate-400 text-lg mb-10 max-w-xl mx-auto">
              Blog yazılarımızda bulduğunuz ipuçlarını uygulamak veya profesyonel destek almak için bize ulaşın.
            </p>
            <a href="tel:05336157835" class="inline-flex items-center gap-3 bg-orange-600 text-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-orange-700 transition-colors shadow-lg shadow-orange-600/20">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
              Hemen Ara: 0533 615 78 35
            </a>
          </div>
        </div>
      </div>
    </section>

  </main>
  <Footer />
</Layout>