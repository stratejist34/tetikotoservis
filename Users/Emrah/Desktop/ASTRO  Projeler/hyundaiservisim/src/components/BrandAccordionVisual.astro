---
// BrandAccordionVisual.astro - Araç Görselli Accordion
interface Props {
  brands: Array<{
    name: string;
    image: string;
    color: string;
    services: string[];
    link: string;
    featuredModel?: string;
  }>;
}

const { brands } = Astro.props;
---

<section class="py-20 bg-gradient-to-b from-gray-50 to-white">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-5xl font-bold text-gray-900 mb-4">Özel Servis Hizmetlerimiz</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">Her markanın teknolojisi ve özellikleri için özel olarak eğitilmiş teknik ekibimizle hizmetinizdeyiz</p>
    </div>

    <div class="grid gap-8 max-w-6xl mx-auto">
      {brands.map((brand, index) => (
        <div class={`brand-accordion relative ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'} flex flex-col md:flex items-center gap-8 bg-white rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-500 group`} data-brand={brand.name.toLowerCase()}>
          
          <!-- Araç Görseli -->
          <div class="w-full md:w-1/2 relative overflow-hidden h-64 md:h-96">
            <div class="absolute inset-0 bg-gradient-to-br from-gray-100 to-gray-200"></div>
            <img 
              src={brand.image} 
              alt={`${brand.name} Servis Araçları`} 
              class="w-full h-full object-cover transform transition-transform duration-700 group-hover:scale-110"
            />
            
            <!-- Overlay Bilgi -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent flex items-end p-8">
              <div>
                <div class={`inline-block ${brand.color} text-white px-4 py-2 rounded-full text-sm font-semibold mb-3`}>
                  {brand.featuredModel || 'Özel Servis'}
                </div>
                <h3 class="text-3xl font-bold text-white">{brand.name}</h3>
              </div>
            </div>
            
            <!-- Hover Efekt Işığı -->
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
          </div>
          
          <!-- İçerik Alanı -->
          <div class="w-full md:w-1/2 p-8">
            <div class="mb-6">
              <div class={`inline-flex items-center gap-2 ${brand.color} text-white px-4 py-2 rounded-lg text-sm font-semibold mb-4`}>
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                Özel Servis Garantisi
              </div>
              
              <h3 class="text-2xl font-bold text-gray-900 mb-2">{brand.name} Servis Hizmetleri</h3>
              <p class="text-gray-600 mb-6">Tüm {brand.name} modelleri için orijinal yedek parça ve uzman teknik servis hizmeti</p>
            </div>
            
            <!-- Hizmetler Grid -->
            <div class="grid grid-cols-2 gap-3 mb-6">
              {brand.services.slice(0, 4).map((service) => (
                <div class="flex items-center gap-2 text-sm text-gray-700">
                  <div class={`w-2 h-2 ${brand.color} rounded-full`}></div>
                  {service}
                </div>
              ))}
            </div>
            
            <!-- Accordion Toggle -->
            <button 
              onclick={`toggleBrandAccordion('${brand.name.toLowerCase()}')`}
              class="w-full flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors duration-200 group/toggle"
            >
              <span class="font-semibold text-gray-800">Tüm Hizmetleri Gör ({brand.services.length} hizmet)</span>
              <svg class="w-5 h-5 text-gray-600 transform transition-transform group-hover/toggle:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
            
            <!-- Detaylı İçerik (Hidden by default) -->
            <div id={`brand-${brand.name.toLowerCase()}`} class="hidden mt-4 p-4 bg-blue-50 rounded-lg">
              <h4 class="font-semibold text-gray-900 mb-3">Tüm Servis Hizmetlerimiz</h4>
              <div class="grid grid-cols-2 gap-2 mb-4">
                {brand.services.map((service) => (
                  <div class="flex items-center gap-2 text-sm text-gray-700">
                    <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    {service}
                  </div>
                ))}
              </div>
              
              <!-- CTA Butonlar -->
              <div class="flex gap-3">
                <a 
                  href={brand.link}
                  class="flex-1 bg-gradient-to-r from-blue-600 to-blue-700 text-white px-4 py-3 rounded-lg font-semibold hover:from-blue-700 hover:to-blue-800 transition-all duration-200 text-center"
                >
                  Detaylı Bilgi
                </a>
                <a 
                  href="tel:+905336157835"
                  class="flex-1 bg-gradient-to-r from-green-600 to-green-700 text-white px-4 py-3 rounded-lg font-semibold hover:from-green-700 hover:to-green-800 transition-all duration-200 text-center"
                >
                  Hemen Ara
                </a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  function toggleBrandAccordion(brandName) {
    const content = document.getElementById(`brand-${brandName}`);
    const allContents = document.querySelectorAll('[id^="brand-"]');
    
    // Diğerlerini kapat
    allContents.forEach(item => {
      if (item.id !== `brand-${brandName}`) {
        item.classList.add('hidden');
      }
    });
    
    // Mevcutu toggle et
    content.classList.toggle('hidden');
  }
</script>

<style>
  .brand-accordion {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .brand-accordion:hover {
    transform: translateY(-2px);
  }
</style>