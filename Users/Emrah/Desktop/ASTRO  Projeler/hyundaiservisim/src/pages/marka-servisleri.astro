---
import Layout from '../layouts/Layout.astro';
import BrandAccordion from '../components/BrandAccordion.astro';
import BrandCards from '../components/BrandCards.astro';

const brands = [
  {
    name: 'Hyundai',
    icon: '/images/logos/hyundai-logo.svg',
    color: 'bg-gradient-to-br from-blue-600 to-blue-800',
    services: [
      'Periyodik Bakım',
      'Motor Servisi',
      'Şanzıman Tamiri',
      'Klima Servisi',
      'Fren Sistemi',
      'Elektrik Elektronik',
      'Orijinal Yedek Parça',
      '7/24 Yol Yardım'
    ],
    link: '/gebze-hyundai-servis',
    description: 'Tüm Hyundai modelleri için özel servis çözümleri'
  },
  {
    name: 'Kia',
    icon: '/images/logos/kia-logo.svg',
    color: 'bg-gradient-to-br from-red-600 to-orange-600',
    services: [
      'Kia Özel Servis',
      'Periyodik Bakım',
      'Motor Check-up',
      'Fren Sistemi',
      'Klima Bakımı',
      'Lastik Servisi',
      'Orijinal Parça',
      'Garanti Hizmeti'
    ],
    link: '/kia-ozel-servis-gebze-tuzla',
    description: 'Kia araçlarınız için uzman teknik servis'
  },
  {
    name: 'Toyota',
    icon: '/images/logos/toyota-logo.svg',
    color: 'bg-gradient-to-br from-red-700 to-red-900',
    services: [
      'Toyota Servis',
      'Bakım Programı',
      'Hybrid Servis',
      'Motor Diagnostik',
      'Fren Balance',
      'Klima Filtrasyon',
      'Orijinal Parça',
      'Toyota Garanti'
    ],
    link: '/gebze-toyota-servis',
    description: 'Toyota kalitesiyle özel servis hizmeti'
  },
  {
    name: 'Nissan',
    icon: '/images/logos/nissan-logo.svg',
    color: 'bg-gradient-to-br from-gray-700 to-gray-900',
    services: [
      'Nissan Özel Servis',
      'Periyodik Bakım',
      'CVT Şanzıman',
      'Motor Servisi',
      'Fren Sistemi',
      'Klima Tamiri',
      'Orijinal Parça',
      'Nissan Garanti'
    ],
    link: '/gebze-nissan-servis',
    description: 'Nissan teknolojisi için uzman ekip'
  }
];
---

<Layout title="Marka Servislerimiz | Tetik Otomotiv">
  
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-5xl font-bold text-white mb-6">Marka Servislerimiz</h1>
      <p class="text-xl text-blue-100 max-w-3xl mx-auto mb-8">
        Her markanın teknolojisi ve özellikleri için özel olarak eğitilmiş teknik ekibimizle 
        Gebze, Tuzla ve Pendik bölgesinde hizmetinizdeyiz
      </p>
      
      <!-- İstatistikler -->
      <div class="grid md:grid-cols-4 gap-6 max-w-4xl mx-auto">
        <div class="bg-white/10 backdrop-blur-md rounded-xl p-6">
          <div class="text-3xl font-bold text-white mb-2">15+</div>
          <div class="text-blue-100">Yıl Deneyim</div>
        </div>
        <div class="bg-white/10 backdrop-blur-md rounded-xl p-6">
          <div class="text-3xl font-bold text-white mb-2">5000+</div>
          <div class="text-blue-100">Mutlu Müşteri</div>
        </div>
        <div class="bg-white/10 backdrop-blur-md rounded-xl p-6">
          <div class="text-3xl font-bold text-white mb-2">4</div>
          <div class="text-blue-100">Marka Uzmanlığı</div>
        </div>
        <div class="bg-white/10 backdrop-blur-md rounded-xl p-6">
          <div class="text-3xl font-bold text-white mb-2">24/7</div>
          <div class="text-blue-100">Yol Yardım</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Accordion Version -->
  <BrandAccordion brands={brands} />
  
  <!-- Cards Version (Alternatif olarak kullanabilirsiniz) -->
  <!-- <BrandCards brands={brands} /> -->

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-orange-600 to-red-600">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Hemen Servis Randevusu Alın!</h2>
      <p class="text-orange-100 text-lg mb-8">
        Uzman teknisyenlerimizle aracınıza en iyi bakımı garanti ediyoruz
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center max-w-md mx-auto">
        <a 
          href="tel:+905336157835"
          class="flex-1 bg-white text-orange-600 px-8 py-4 rounded-lg font-bold hover:bg-gray-100 transition-colors flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Hemen Ara
        </a>
        
        <a 
          href="/iletisim"
          class="flex-1 bg-black/20 backdrop-blur-sm text-white px-8 py-4 rounded-lg font-bold hover:bg-black/30 transition-colors border border-white/30"
        >
          Online Randevu
        </a>
      </div>
    </div>
  </section>

</Layout>