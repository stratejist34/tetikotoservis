<style>
  @keyframes shine {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  /* Scroll Reveal AnimasyonlarÄ± */
  [data-reveal] {
    opacity: 0;
    transition: opacity 1s cubic-bezier(0.4, 0, 0.2, 1), 
                transform 1s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: opacity, transform;
  }

  [data-reveal="bottom"] {
    transform: translateY(100px);
  }

  [data-reveal="top"] {
    transform: translateY(-100px);
  }

  [data-reveal="left"] {
    transform: translateX(-100px);
  }

  [data-reveal="right"] {
    transform: translateX(100px);
  }

  [data-reveal].revealed {
    opacity: 1;
    transform: translate(0, 0) !important;
  }

  /* Brand Card Styles */
  .brand-card {
    transform-style: preserve-3d;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .brand-card:hover {
    transform: translateY(-8px);
  }
  
  /* Smooth scrollbar for services list */
  .brand-card ul::-webkit-scrollbar {
    width: 4px;
  }
  
  .brand-card ul::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2px;
  }
  
  .brand-card ul::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 2px;
  }
</style>

<script>
  // Smooth Scroll Reveal AnimasyonlarÄ± - GeliÅŸmiÅŸ Versiyon
  const observerOptions = {
    threshold: 0.15,
    rootMargin: '0px 0px -150px 0px' // Daha erken tetikleme
  };

  const revealObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        // Her element iÃ§in farklÄ± delay ekle (stagger effect)
        setTimeout(() => {
          entry.target.classList.add('revealed');
        }, index * 50); // Her element 50ms arayla
        
        // Bir kez gÃ¶sterildikten sonra observe'i durdur (performans iÃ§in)
        revealObserver.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Sayfa yÃ¼klendiÄŸinde tÃ¼m reveal elementlerini gÃ¶zlemle
  document.addEventListener('DOMContentLoaded', () => {
    const revealElements = document.querySelectorAll('[data-reveal]');
    revealElements.forEach((el, index) => {
      // Ä°lk yÃ¼klemede gÃ¶rÃ¼nÃ¼r olanlarÄ± hemen gÃ¶ster
      const rect = el.getBoundingClientRect();
      const isVisible = rect.top < window.innerHeight && rect.bottom > 0;
      
      if (!isVisible) {
        revealObserver.observe(el);
      } else {
        // Zaten gÃ¶rÃ¼nÃ¼rse hemen gÃ¶ster
        setTimeout(() => {
          el.classList.add('revealed');
        }, index * 30);
      }
    });
  });
</script>